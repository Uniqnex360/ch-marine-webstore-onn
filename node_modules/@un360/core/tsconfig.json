{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "react", "react-dom"],  // include react types as well
    "moduleResolution": "node",
    "lib": ["dom", "esnext"]                 // include DOM lib for browser globals
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
